<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformasiPerusahaanActivity"
    android:background="@color/navy">
    <EditText
        android:id="@+id/editBidangPerusahaanInfoPerusahaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:enabled="false"
        android:text="@string/content_bidang"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBidangPerusahaanInfoPerusahaan" />

    <TextView
        android:id="@+id/txtBidangPerusahaanInfoPerusahaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/bidang1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTahunBerdiriPerusahaanInfoPerusahaan" />

    <EditText
        android:id="@+id/editTahunBerdiriPerusahaanInfoPerusahaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:enabled="false"
        android:text="@string/content_tahun_berdiri"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTahunBerdiriPerusahaanInfoPerusahaan" />

    <TextView
        android:id="@+id/txtTahunBerdiriPerusahaanInfoPerusahaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tahun_berdiri1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNoTeleponPerusahaanInfoPerusahaan" />

    <EditText
        android:id="@+id/editNoTeleponPerusahaanInfoPerusahaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:enabled="false"
        android:text="@string/no_hp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNoTeleponPerusahaanInfoPerusahaan" />

    <TextView
        android:id="@+id/txtNoTeleponPerusahaanInfoPerusahaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/nomor_telp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAlamatPerusahaanInfoPerusahaan" />

    <EditText
        android:id="@+id/editNamaPerusahaanInfoPerusahaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="24dp"
        android:enabled="false"
        android:text="@string/nama_perusahaan2"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageGambarPerusahaanInfoPerusahaan"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNamaPemilikInfoPerusahaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="24dp"
        android:enabled="false"
        android:text="@string/nama_pemilik1"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/imageGambarPerusahaanInfoPerusahaan"
        app:layout_constraintTop_toBottomOf="@+id/editNamaPerusahaanInfoPerusahaan" />

    <ImageView
        android:id="@+id/imageGambarPerusahaanInfoPerusahaan"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/editNamaPerusahaanInfoPerusahaan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:background="@color/black"
        android:padding="1dp"/>

    <TextView
        android:id="@+id/txtAlamatPerusahaanInfoPerusahaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:text="@string/alamat1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageGambarPerusahaanInfoPerusahaan" />

    <EditText
        android:textSize="16sp"
        android:id="@+id/editAlamatPerusahaanInfoPerusahaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:enabled="false"
        android:text="@string/content_alamat"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAlamatPerusahaanInfoPerusahaan" />

    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Jam Masuk : "
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editBidangPerusahaanInfoPerusahaan"
        android:id="@+id/txtJamMasukInfoPerusahaan"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Jam Pulang : "
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtJamMasukInfoPerusahaan"
        android:id="@+id/txtJamPulangInfoPerusahaan"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editBidangPerusahaanInfoPerusahaan"
        app:layout_constraintLeft_toRightOf="@+id/txtJamMasukInfoPerusahaan"
        android:id="@+id/txtWaktuJamMasukInfoPerusahaan"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtWaktuJamMasukInfoPerusahaan"
        app:layout_constraintLeft_toRightOf="@+id/txtJamPulangInfoPerusahaan"
        android:id="@+id/txtWaktuJamPulangInfoPerusahaan"/>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi"
        android:id="@+id/btnCekLokasiPerusahaanInfoPerusahaan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtJamPulangInfoPerusahaan"
        android:layout_marginStart="16dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnCekLokasiPerusahaanInfoPerusahaan"
        android:text="lokasi perusahaan"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txtJamPulangInfoPerusahaan"
        android:id="@+id/editLokasiPerusahaanInfoPerusahaan"
        android:enabled="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Work Hours (jam)"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCekLokasiPerusahaanInfoPerusahaan"
        android:id="@+id/txtWorkHoursInfoPerusahaan"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text=" per Week :"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtWorkHoursInfoPerusahaan"
        android:id="@+id/txtWorkHoursWeekInfoPerusahaan"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text=" per Day :"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editWorkHoursWeekInfoPerusahaan"
        android:id="@+id/txtWorkHoursDayInfoPerusahaan"/>
    <EditText
        android:id="@+id/editWorkHoursWeekInfoPerusahaan"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="40"
        android:text="40"
        android:textAlignment="center"
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/txtWorkHoursWeekInfoPerusahaan"
        app:layout_constraintTop_toBottomOf="@+id/txtWorkHoursInfoPerusahaan"
        android:enabled="false"
        />
    <EditText
        android:id="@+id/editWorkHoursDayInfoPerusahaan"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="8"
        android:text="8"
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/txtWorkHoursWeekInfoPerusahaan"
        app:layout_constraintTop_toBottomOf="@+id/editWorkHoursWeekInfoPerusahaan"
        android:enabled="false"
        android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>